generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  telegramId   String        @unique
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  networkUsers NetworkUser[]

  @@index([telegramId])
}

model Network {
  id           String        @id @default(uuid())
  name         String
  usdcAddress  String
  usdcDecimals Int
  rpcUrl       String
  networkUsers NetworkUser[]
}

model NetworkUser {
  id         String   @id @default(uuid())
  networkId  String
  userId     String
  publicKey  String   @unique
  privateKey String   @unique
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  network    Network  @relation(fields: [networkId], references: [id])
  user       User     @relation(fields: [userId], references: [id])

  @@unique([networkId, userId])
  @@index([networkId, userId])
}

model Server {
  id                      String @id @default(uuid())
  serverId                String @unique
  receiverSolanaAddress   String
  receiverEthereumAddress String
  costInUsdc              BigInt
  maxRoleApplicableTime   Int[]

  @@index([serverId])
}

model RoleAssigned {
  id         String   @id @default(uuid())
  userId     String
  serverId   String
  expiryTime DateTime
  createdAt  DateTime @default(now())

  @@index([expiryTime])
}

model Invoice {
  id                 String   @id @default(uuid())
  userId             String
  serverId           String
  roleApplicableTime Int
  token              String   @unique
  expiresAt          DateTime

  @@unique([userId, serverId])
}
