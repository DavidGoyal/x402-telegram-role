generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String        @id @default(uuid())
  telegramUsername String
  telegramId       String        @unique
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  networkUsers     NetworkUser[]

  @@index([telegramId])
}

model Network {
  id           String        @id @default(uuid())
  name         String
  usdcAddress  String
  usdcDecimals Int
  rpcUrl       String
  networkUsers NetworkUser[]
}

model NetworkUser {
  id         String   @id @default(uuid())
  networkId  String
  userId     String
  publicKey  String   @unique
  privateKey String   @unique
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  network    Network  @relation(fields: [networkId], references: [id])
  user       User     @relation(fields: [userId], references: [id])

  @@unique([networkId, userId])
  @@index([networkId, userId])
}

model Server {
  id                      String         @id @default(uuid())
  name                    String
  serverId                String         @unique
  ownerAddress            String
  receiverSolanaAddress   String
  receiverEthereumAddress String
  costInUsdc              BigInt
  maxRoleApplicableTime   Int[]
  roleAssigneds           RoleAssigned[]

  @@index([serverId])
  @@index([ownerAddress])
}

model RoleAssigned {
  id             String   @id @default(uuid())
  userId         String
  username       String
  serverId       String
  expiryTime     DateTime
  amount         BigInt
  txnLink        String
  joined         Boolean  @default(false)
  inviteLink     String
  createdAt      DateTime @default(now())
  serverNormalId String
  server         Server   @relation(fields: [serverNormalId], references: [id])
  active         Boolean  @default(true)

  @@unique([inviteLink, serverId])
  @@index([expiryTime])
}

model Invoice {
  id                 String   @id @default(uuid())
  userId             String
  serverId           String
  roleApplicableTime Int
  token              String   @unique
  expiresAt          DateTime

  @@unique([userId, serverId])
}
