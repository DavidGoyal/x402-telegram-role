generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String        @id @default(uuid())
  telegramUsername String
  telegramId       String        @unique
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  networkUsers     NetworkUser[]

  @@index([telegramId])
}

model Network {
  id           String        @id @default(uuid())
  name         String
  usdcAddress  String
  usdcDecimals Int
  rpcUrl       String
  networkUsers NetworkUser[]
}

model NetworkUser {
  id         String   @id @default(uuid())
  networkId  String
  userId     String
  publicKey  String   @unique
  privateKey String   @unique
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  network    Network  @relation(fields: [networkId], references: [id])
  user       User     @relation(fields: [userId], references: [id])

  @@unique([networkId, userId])
  @@index([networkId, userId])
}

model Server {
  id                      String         @id @default(uuid())
  name                    String
  serverTelegramId        String         @unique
  ownerAddress            String
  receiverSolanaAddress   String
  receiverEthereumAddress String
  costInUsdc              BigInt
  maxRoleApplicableTime   Int[]
  roleAssigneds           RoleAssigned[]
  expiresOn               DateTime       @default(now())
  numberOfTxns            BigInt         @default(0)

  @@index([serverTelegramId])
  @@index([ownerAddress])
}

model RoleAssigned {
  id         String   @id @default(uuid())
  userId     String
  username   String
  serverId   String
  expiresOn  DateTime
  amount     BigInt
  txnLink    String
  joined     Boolean  @default(false)
  inviteLink String
  createdAt  DateTime @default(now())
  server     Server   @relation(fields: [serverId], references: [id])
  active     Boolean  @default(true)

  @@unique([inviteLink, serverId])
  @@index([expiresOn])
}

model Invoice {
  id                 String   @id @default(uuid())
  userId             String
  serverId           String
  roleApplicableTime Int
  token              String   @unique
  expiresOn          DateTime

  @@unique([userId, serverId])
}
